#!/bin/sh -ex

DB_NAME=mibew
DB_USER=mibew
DB_PASS=$(mcookie)

ADMIN_NAME=admin
ADMIN_PASS=turnkey

SRC=/usr/local/src
WEBROOT=/var/www/mibew

# unpack and set permissions
mkdir -p $WEBROOT
unzip $SRC/mibew*.zip -d $WEBROOT
rm $SRC/mibew*.zip
chown -R root:root $WEBROOT
chown -R www-data:www-data $WEBROOT/images/avatar

# configure apache
a2dissite default
a2ensite mibew
a2enmod rewrite

